#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../npm-check-updates/bin/npm-check-updates" "$@"
  ret=$?
else 
  node  "$basedir/../npm-check-updates/bin/npm-check-updates" "$@"
  ret=$?
fi
exit $ret
