<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F6F7"
    android:paddingBottom="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inner1"
        android:background="@drawable/rounded_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c_name"
            android:layout_centerInParent="true"
            android:background="@drawable/edittextstyle"
            android:hint="Company Name"
            android:textColorHint="#94999C"
            android:textColor="#32393D"
            android:ems="15"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="15"
            android:background="@drawable/edittextstyle"
            android:textColorHint="#94999C"
            android:textColor="#32393D"
            android:id="@+id/c_address"
            android:hint="Company Address"
            android:layout_below="@+id/c_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/c_company"
            android:textColorHint="#94999C"
            android:textColor="#32393D"
            android:hint="Company Contact Number"
            android:background="@drawable/edittextstyle"
            android:ems="15"
            android:layout_centerInParent="true"
            android:layout_below="@+id/c_address"
            android:layout_alignLeft="@+id/c_address"
            android:layout_alignStart="@+id/c_address"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textColorHint="#94999C"
            android:ems="15"
            android:textColor="#32393D"
            android:id="@+id/c_contact"
            android:background="@drawable/edittextstyle"
            android:hint="Person Contact Number"
            android:layout_below="@+id/c_company"
            android:layout_alignLeft="@+id/c_company"
            android:layout_alignStart="@+id/c_company"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:background="#0789BA"
        android:id="@+id/c_submitButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/inner1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>