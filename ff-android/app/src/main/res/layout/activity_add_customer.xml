<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F7"
    android:scrollbars="none"
    tools:context="com.acc.fieldforce.SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/ColorPrimary"
            android:layout_alignParentTop="true"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            android:minHeight="?attr/actionBarSize">

        </android.support.v7.widget.Toolbar>

        <EditText
            android:id="@+id/customer_name"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/custom_theme_edit_text_holo_light"
            android:gravity="center"
            android:hint="@string/customer_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:nextFocusDown="@+id/company_address"
            android:paddingBottom="0dp"
            android:singleLine="true"
            android:textColorHint="#808080"
            android:textColor="@color/text_color">
            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/customer_name_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:contentDescription="@null"
            android:textColor="@color/text_error_color"
            android:text="@string/customer_name_error"
            android:visibility="gone"
            android:layout_below="@id/customer_name"/>

        <EditText
            android:id="@+id/customer_address"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/customer_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_theme_edit_text_holo_light"
            android:gravity="center"
            android:hint="@string/customer_address"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:nextFocusDown="@+id/company_name"
            android:paddingBottom="0dp"
            android:singleLine="true"
            android:textColorHint="#808080"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/company_address_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:contentDescription="@null"
            android:textColor="@color/text_error_color"
            android:text="@string/customer_address_error"
            android:visibility="gone"
            android:layout_below="@id/customer_address"/>

        <EditText
            android:id="@+id/company_name"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/customer_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_theme_edit_text_holo_light"
            android:gravity="center"
            android:hint="@string/company_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:nextFocusDown="@+id/contact_number"
            android:paddingBottom="0dp"
            android:singleLine="true"
            android:textColorHint="#808080"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/company_name_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:contentDescription="@null"
            android:textColor="@color/text_error_color"
            android:text="@string/company_name_error"
            android:visibility="gone"
            android:layout_below="@id/company_name"/>

        <EditText
            android:id="@+id/contact_number"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@+id/company_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_theme_edit_text_holo_light"
            android:gravity="center"
            android:hint="@string/contact_no"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:paddingBottom="0dp"
            android:singleLine="true"
            android:textColorHint="#808080"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/contact_number_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:contentDescription="@null"
            android:textColor="@color/text_error_color"
            android:text="@string/contact_no_error"
            android:visibility="gone"
            android:layout_below="@id/contact_number"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="12dp"
            android:background="@color/ColorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/ic_cancel"
            android:drawableLeft="@drawable/ic_cancel"/>

        <TextView
            android:id="@+id/done"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/ColorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:text="@string/done"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/ic_done"
            android:drawableLeft="@drawable/ic_done"/>


    </RelativeLayout>
</ScrollView>
