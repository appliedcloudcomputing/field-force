<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099CC">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c_name"
        android:background="@drawable/edittextstyle"
        android:hint="Customer Name"
        android:textColorHint="#94999C"
        android:textColor="#32393D"
        android:textSize="15dp"
        android:ems="12"
        android:drawableLeft="@drawable/ic_user168_1"
        android:drawablePadding="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="12"
        android:textSize="15dp"
        android:drawableLeft="@drawable/ic_pins9"
        android:background="@drawable/edittextstyle"
        android:textColorHint="#94999C"
        android:textColor="#32393D"
        android:id="@+id/c_address"
        android:hint="Customer Address"
        android:layout_below="@+id/c_name"
        android:layout_alignLeft="@+id/c_name"
        android:layout_alignStart="@+id/c_name"
        android:layout_marginBottom="20dp"
        android:drawablePadding="5dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_suitcase1"
        android:id="@+id/c_company"
        android:textColorHint="#94999C"
        android:textColor="#32393D"
        android:hint="Company Name"
        android:textSize="15dp"
        android:drawablePadding="5dp"
        android:background="@drawable/edittextstyle"
        android:ems="12"
        android:layout_below="@+id/c_address"
        android:layout_alignLeft="@+id/c_address"
        android:layout_alignStart="@+id/c_address"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textColorHint="#94999C"
        android:ems="12"
        android:drawableLeft="@drawable/ic_smartphone11"
        android:drawablePadding="5dp"
        android:textColor="#32393D"
        android:id="@+id/c_contact"
        android:textSize="15dp"
        android:background="@drawable/edittextstyle"
        android:hint="Contact Number"
        android:layout_below="@+id/c_company"
        android:layout_alignLeft="@+id/c_company"
        android:layout_alignStart="@+id/c_company"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:background="#00AEEF"
        android:id="@+id/c_submitButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/c_contact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>