<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.acc.fieldforce.Menu"
    android:background="#00AEEF">
        <Button
            android:id="@+id/customer"
            android:layout_marginTop="30dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:text="CUSTOMER"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:background="#FEA700"
            android:drawableLeft="@drawable/ic_customer"
            android:drawableRight="@drawable/ic_arrow"/>

        <Button
            android:id="@+id/leads"
            android:layout_marginTop="25dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:text="LEADS"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_below="@id/customer"
            android:background="#FF2AFF"
            android:drawableLeft="@drawable/ic_leads"
            android:drawableRight="@drawable/ic_arrow"/>

        <Button
            android:id="@+id/jobs"
            android:layout_marginTop="25dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:text="JOBS"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_below="@id/leads"
            android:background="#6742BA"
            android:drawableLeft="@drawable/ic_jobs"
            android:drawableRight="@drawable/ic_arrow"/>

        <Button
            android:id="@+id/expenses"
            android:layout_marginTop="25dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:text="EXPENSES"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_below="@id/jobs"
            android:background="#099D7E"
            android:drawableLeft="@drawable/ic_expenses"
            android:drawableRight="@drawable/ic_arrow"/>

        <Button
            android:id="@+id/account"
            android:layout_marginTop="25dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:text="ACCOUNT"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_below="@id/expenses"
            android:background="#F05133"
            android:drawableLeft="@drawable/ic_account"
            android:drawableRight="@drawable/ic_arrow"/>
</RelativeLayout>
